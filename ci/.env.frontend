# =============================================================================
# FRONTEND CI/CD ENVIRONMENT CONFIGURATION
# =============================================================================
# Este archivo debe ser usado por Jenkins para el despliegue del frontend

# Frontend Image Configuration
FE_IMAGE_NAME=ghcr.io/atijaguar-ec/fe-inatrace
FE_TAG=test-5054e7eb

# Container Configuration
CONTAINER_NAME=inatrace-fe-test-unocace
HOST_HTTP_PORT=8081

# Network Configuration
FRONTEND_NETWORK=inatrace-frontend-network
BACKEND_NETWORK=inatrace-backend-network

# Nginx Configuration
NGINX_CONF_PATH=./nginx.conf

# Healthcheck Configuration (optimizado para CI)
HEALTHCHECK_URL=http://localhost
HEALTHCHECK_INTERVAL=15s
HEALTHCHECK_TIMEOUT=5s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=10s

# Traefik Configuration (para producci√≥n)
TRAEFIK_ENABLE=true
TRAEFIK_ROUTER_NAME=inatrace-frontend
TRAEFIK_ROUTER_RULE=Host(`inatrace.atijaguar.com`) || Host(`5.161.183.137`)
TRAEFIK_ENTRYPOINTS=web
TRAEFIK_CERT_RESOLVER=letsencrypt
